# Local Development Environment Variables Template
# Copy this file to .env.local and update the values for your development environment

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME="Your App Name"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Main API endpoint for development
NEXT_PUBLIC_API_URL=http://localhost:8000/api
API_BASE_URL=http://localhost:8000/api

# Alternative API endpoints
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:4000/graphql
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# API Authentication
API_SECRET_KEY=your-dev-api-secret-key-here
JWT_SECRET=your-jwt-secret-for-development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/yourapp_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=yourapp_dev
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# Redis (for caching/sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB (if using)
MONGODB_URI=mongodb://localhost:27017/yourapp_dev

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-for-development

# OAuth providers (development credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Session configuration
SESSION_SECRET=your-session-secret-for-development
ENCRYPTION_KEY=your-encryption-key-for-development

# =============================================================================
# THIRD-PARTY SERVICES (DEVELOPMENT)
# =============================================================================
# Email service (development/testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@localhost

# File storage (local development)
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (development bucket)
AWS_ACCESS_KEY_ID=your-dev-aws-access-key
AWS_SECRET_ACCESS_KEY=your-dev-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-dev-bucket-name

# Stripe (test keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# DEBUG & LOGGING
# =============================================================================
# Debug flags
DEBUG=true
NEXT_PUBLIC_DEBUG=true
LOG_LEVEL=debug
VERBOSE_LOGGING=true

# Database query logging
DATABASE_LOGGING=true
SLOW_QUERY_THRESHOLD=1000

# API request/response logging
API_LOGGING=true
LOG_API_REQUESTS=true
LOG_API_RESPONSES=true

# Performance monitoring
PERFORMANCE_MONITORING=true
TRACE_REQUESTS=true

# =============================================================================
# FEATURE TOGGLES (DEVELOPMENT)
# =============================================================================
# Enable/disable features in development
NEXT_PUBLIC_FEATURE_NEW_DASHBOARD=true
NEXT_PUBLIC_FEATURE_BETA_FEATURES=true
NEXT_PUBLIC_FEATURE_EXPERIMENTAL=true
NEXT_PUBLIC_FEATURE_ANALYTICS=false

# Development-only features
ENABLE_DEV_TOOLS=true
ENABLE_MOCK_DATA=true
ENABLE_TEST_ROUTES=true
SHOW_DEBUG_INFO=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Hot reloading and development server
FAST_REFRESH=true
TURBOPACK=false

# Code generation
CODEGEN_WATCH=true
GENERATE_TYPES=true

# Testing
RUN_TESTS_ON_BUILD=false
ENABLE_TEST_DB=true

# =============================================================================
# ANALYTICS & MONITORING (DEVELOPMENT)
# =============================================================================
# Analytics (use development/test IDs)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=
NEXT_PUBLIC_HOTJAR_ID=

# Error tracking (development environment)
SENTRY_DSN=your-sentry-dsn-for-development
SENTRY_ENVIRONMENT=development

# Performance monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# =============================================================================
# CACHE & PERFORMANCE
# =============================================================================
# Cache configuration
CACHE_TTL=300
DISABLE_CACHE=false
ENABLE_ISR=true

# Image optimization
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,127.0.0.1

# =============================================================================
# DEVELOPMENT UTILITIES
# =============================================================================
# Seed data
SEED_DATABASE=false
MOCK_EXTERNAL_APIS=true

# Development ports
DEV_SERVER_PORT=3000
API_SERVER_PORT=8000
DOCS_PORT=3001

# Webhook testing (ngrok, etc.)
WEBHOOK_BASE_URL=http://localhost:3000

# =============================================================================
# LOCAL OVERRIDES
# =============================================================================
# Add any local-specific overrides here
# These might vary between different developers' machines

# Local database overrides
# DATABASE_URL=postgresql://yourname:password@localhost:5432/yourapp_dev

# Local API overrides
# NEXT_PUBLIC_API_URL=http://192.168.1.100:8000/api

# Local feature flags
# NEXT_PUBLIC_FEATURE_YOUR_FEATURE=true