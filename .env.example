# Environment Variables Configuration
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
NODE_ENV=development

# Next.js build configuration
NEXT_BUILD_ID=
ANALYZE_BUNDLE=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database connection string
# Examples:
# PostgreSQL: postgresql://username:password@localhost:5432/database_name
# MongoDB: mongodb://username:password@localhost:27017/database_name
# MySQL: mysql://username:password@localhost:3306/database_name
DATABASE_URL=

# Database connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis connection (for caching/sessions)
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-jwt-secret-key-here

# JWT secrets for custom auth implementation
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# Session configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=604800

# Password encryption
BCRYPT_ROUNDS=12

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# =============================================================================
# API ENDPOINTS & MICROSERVICES
# =============================================================================

# External API base URLs
API_BASE_URL=http://localhost:3001
EXTERNAL_API_URL=https://api.example.com/v1

# Internal service URLs
USER_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3003
ANALYTICS_SERVICE_URL=http://localhost:3004

# GraphQL endpoint
GRAPHQL_ENDPOINT=http://localhost:4000/graphql

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Email service (SendGrid, Mailgun, etc.)
SENDGRID_API_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# SMS service (Twilio, etc.)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Cloud storage (AWS S3, Cloudinary, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=

CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Payment processing (Stripe, PayPal, etc.)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Maps and geolocation
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=

# Analytics and monitoring
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
SENTRY_DSN=
HOTJAR_ID=

# Search services
ALGOLIA_APP_ID=
ALGOLIA_API_KEY=
ELASTICSEARCH_URL=

# =============================================================================
# AI & ML SERVICES
# =============================================================================

# OpenAI
OPENAI_API_KEY=

# Anthropic Claude
ANTHROPIC_API_KEY=

# Google AI
GOOGLE_AI_API_KEY=

# Hugging Face
HUGGINGFACE_API_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles for conditional functionality
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_BETA_UI=false
FEATURE_SOCIAL_LOGIN=true
FEATURE_REAL_TIME_CHAT=false
FEATURE_NOTIFICATIONS=true
FEATURE_DARK_MODE=true
FEATURE_MULTI_LANGUAGE=false

# A/B testing flags
AB_TEST_NEW_HOMEPAGE=false
AB_TEST_CHECKOUT_FLOW=false

# =============================================================================
# PUBLIC ENVIRONMENT VARIABLES (Exposed to browser)
# =============================================================================

# Public API endpoints (accessible in client-side code)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Public service keys (safe to expose)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# App configuration
NEXT_PUBLIC_APP_NAME=My Next.js App
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_SUPPORT_EMAIL=support@example.com

# Feature flags (client-side)
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# Social media links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourapp
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/yourapp
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourapp

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development tools
DEV_MOCK_APIS=false
DEV_BYPASS_AUTH=false
DEV_LOG_LEVEL=info

# Test environment configuration
TEST_DATABASE_URL=
TEST_JWT_SECRET=test-secret-key

# Debugging flags
DEBUG_API_CALLS=false
DEBUG_DATABASE_QUERIES=false
DEBUG_AUTH_FLOW=false

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Cache configuration
CACHE_TTL_SECONDS=300
ENABLE_QUERY_CACHING=true
ENABLE_STATIC_GENERATION=true

# CDN configuration
CDN_URL=
IMAGE_CDN_URL=

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log levels and destinations
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=console

# Error tracking
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# Health check endpoints
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# Default language and supported locales
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de,ja

# Translation service
TRANSLATION_SERVICE_API_KEY=

# =============================================================================
# WEBHOOK ENDPOINTS
# =============================================================================

# Webhook secrets for various services
STRIPE_WEBHOOK_SECRET=
GITHUB_WEBHOOK_SECRET=
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup service configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're currently performing scheduled maintenance.